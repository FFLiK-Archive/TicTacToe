<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreActivity"
    android:orientation="vertical"
    android:background="#333333">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_view_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="store"
            android:fontFamily="@font/font"
            android:textSize="30dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/time_bar_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#AAAAAA"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#1b1b1b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rect"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/heart"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hp"
                    android:text="0"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/font"
                    android:textColor="#CCCCCC"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:background="@drawable/rect"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                >
                <ImageView
                    android:src="@drawable/coin"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/coin"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:fontFamily="@font/font"
                    android:textColor="#CCCCCC"
                    android:padding="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src = "@drawable/heart"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/store_item_area"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/heart_t_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/std_btn"
                    android:padding="10dp"
                    android:text="50 T"
                    android:textSize="20dp"
                    android:fontFamily="@font/font"
                    android:layout_margin="10dp"/>
                <Button
                    android:id="@+id/heart_ad_btn"
                    android:layout_width="match_parent"
                    android:background="@drawable/std_btn"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:text="ad"
                    android:textSize="20dp"
                    android:fontFamily="@font/font"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src = "@drawable/coin"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/store_item_area"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/coin_ad_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ad"
                    android:textSize="20dp"
                    android:fontFamily="@font/font"
                    android:background="@drawable/std_btn"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITEM"
                android:textSize="20dp"
                android:fontFamily="@font/font"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/std_btn"
                />

            <Button
                android:id="@+id/right_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="â–¶"
                android:textSize="40dp"
                android:fontFamily="@font/font"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>